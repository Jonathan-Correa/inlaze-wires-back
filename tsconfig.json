{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./build",
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/@types", "src/interfaces", "*.d.ts"]
}
